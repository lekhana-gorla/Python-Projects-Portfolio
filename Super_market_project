#Error Handlings
try:
    n1 = int(input("enter the value:"))
    n2 = int(input("enter the value:"))
    print(n1+n2)
    print(n1/n2)
except ZeroDivisionError as e:
    print(e)

try:
    n1 = int(input("enter the value:"))
    n2 = int(input("enter the value:"))
    print(n1+n2)
    print(n1/n2)
except ValueError as e:
    print(e)

try:
    n1 = int(input("enter the value:"))
    n2 = int(input("enter the value:"))
    print(n1+n2)
    print(n1/n2)
except Exception as e:
    print(e)

