#Write a python function named factorial that takes a positive integer n as input and returns
#its factorial
def factorial():
    n = int(input("enter the value:"))
    fact = 1
    for i in range (1,n+1):
        fact*=i
    return fact
obj = factorial()
print(obj)'''

#Bank management system project
'''class bank:
    def __init__(self,username,password):
        self.username = username
        self.password=password
        self.balance=0
        self.statement = []
    def deposit(self,amount):
        if amount <=0:
            print("enter a positive amount")
        else:
            self.balance+=amount
            self.statement.append(f"deposited:{amount}")
            print(f"The {amount} credited succesfully into your account")
    def withdraw(self,amount):
        if amount<=0:
            print("enter a positive amount")
        elif amount>=self.balance:
            print("enter the valid amount")
        else:
            self.balance-=amount
            self.statement.append(f"withdrawed:{amount}")
            print(f"The {amount} has been debited successfully into your account")
    def show_balance(self):
        print(f"The remaining balance is {self.balance}")
    def mini_statement(self):
        if not self.statement:
            print("No transactions yet!")
        else:
            print("\nMini statement:")
            for tx in self.statement[-5:]:
                print(tx)
SBI = bank("lekhana","1234")
account = None
while True:
    print("choose an option \n1.Create an account \n2.login to account \n3.exit")
    choice = input("enter the choice 1-3:")
    if choice == "1":
        inpt1 = input("enter the username:")
        inpt2 = input("enter the password:")
        account = bank(inpt1,inpt2)
        print("Account created successfully")
        print("-"*25,"Welcome to Python Bank","-"*25)
    elif choice == "2":
        if account is None:
            print("No account found, Please create it")
        else:
            inpt3 = input("enter the username:")
            inpt4 = input("enter the password:")
            if inpt3==account.username and inpt4==account.password:
                print("Login Successfull")
            else:
                print("invalid credentials")
    elif choice == "3":
        print("Thank you for choosing the bank")
        break
    else:
        print("Invalid choice")
    while True:
        print("\nBank menu")
        print("1.deposit")
        print("2. withdraw")
        print("3.balance")
        print("4.mini statement")
        print("5.Logout")
        choice= input("enter the choice 1-5:")
        if choice == "1":
            amount = float(input("enter the amount to deposit:"))
            account.deposit(amount)
        elif choice == "2":
            amount = float(input("enter the amount to withdraw:"))
            account.withdraw(amount)
        elif choice == "3":
            account.show_balance()
        elif choice == "4":
            account.mini_statement()
        elif choice == "5":
            print("Thank you, Bye!")
